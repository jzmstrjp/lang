generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Problem {
  id               String      @id @default(cuid())
  wordCount        Int
  englishSentence  String
  japaneseSentence String
  japaneseReply    String
  englishReply     String
  incorrectOptions Json
  audioEnUrl       String?
  audioEnReplyUrl  String?
  audioJaUrl       String?
  imageUrl         String?
  senderVoice      VoiceType
  senderRole       String
  receiverVoice    VoiceType
  receiverRole     String
  place            String
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@unique([englishSentence, japaneseReply])
  @@index([wordCount, audioEnUrl, audioJaUrl, audioEnReplyUrl], map: "idx_problems_wordcount_audio_notnull")
  @@map("problems")
}

enum VoiceType {
  male
  female
}
