generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProblemType {
  short
  medium
  long
}

model Problem {
  id             String      @id @default(cuid())
  type           ProblemType
  english        String
  japanese       String
  options        Json
  correctIndex   Int
  audioEnUrl     String
  audioJaUrl     String
  sceneImageUrl  String
  sceneId        String
  nuance         String?
  genre          String?
  patternGroup   String?
  isCached       Boolean     @default(false)
  qualityCheck   Boolean     @default(false)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@index([type, isCached, qualityCheck])
  @@index([sceneId])
  @@map("problems")
}
