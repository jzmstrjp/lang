generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Problem {
  id               String      @id @default(cuid())
  wordCount        Int
  englishSentence  String
  japaneseSentence String
  japaneseReply    String
  englishReply     String
  incorrectOptions Json
  audioEnUrl       String?
  audioEnReplyUrl  String?
  audioJaUrl       String?
  imageUrl         String?
  audioReady       Boolean     @default(false)
  senderVoice      VoiceType
  senderRole       String
  receiverVoice    VoiceType
  receiverRole     String
  place            String
  scenePrompt      String?
  senderVoiceInstruction String?
  receiverVoiceInstruction String?
  difficultyLevel  Int?
  
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@unique([englishSentence])
  @@index([audioReady, wordCount], map: "idx_problems_audio_ready_wordcount")
  @@index([audioReady, difficultyLevel], map: "idx_problems_audio_ready_difficulty")
  @@map("problems")
}

enum VoiceType {
  male
  female
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  @@map("admin_users")
}
